<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<ToggleButton
		android:id="@+id/togFrgDocActBonus"
		android:layout_width="match_parent"
		android:layout_height="33dp"
		android:enabled="false"
		android:textOff="@string/togFrgDocBonusInactiv"
		android:textOn="@string/togFrgDocBonusActiv" />

	<EditText
		android:id="@+id/editTextCautare2"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:layout_alignParentStart="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_marginStart="0dp"
		android:layout_marginLeft="0dp"
		android:layout_marginTop="4dp"
		android:layout_marginEnd="0dp"
		android:layout_marginRight="0dp"
		android:background="@drawable/normal_corner"
		android:capitalize="none"
		android:ems="10"
		android:focusable="true"
		android:gravity="center"
		android:hint="Cautare"
		android:inputType="textPersonName"
		android:minHeight="0dp"
		android:textColorHint="#292929"
		android:textStyle="bold" />

	<ListView
		android:id="@id/android:list"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="9">

	</ListView>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:orientation="horizontal">

		<Button
			android:id="@+id/btnFrgContInchide"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:text="@string/btnFrgContInchide"
			android:textAppearance="?android:attr/textAppearanceLarge" />

		<Spinner
			android:id="@+id/spinnerOptiuni2"
			android:layout_width="1dp"
			android:layout_height="1dp"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true"
			android:layout_marginEnd="0dp"
			android:layout_marginRight="0dp"
			android:layout_marginBottom="12dp"
			android:background="#00131111"
			android:spinnerMode="dialog"
			android:visibility="visible" />

		<Button
			android:id="@+id/btnFrgContUpLevel"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:text="@string/btnFrgContUpLevel"
			android:textAppearance="?android:attr/textAppearanceLarge" />
	</LinearLayout>
</LinearLayout>
	